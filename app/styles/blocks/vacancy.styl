.vacancy

  .section-title
    text-align center
    padding-bottom 40px

  &-list
    overflow hidden

  &-body
    margin-top 40px
    box-shadow 0 17px 60px rgba(112, 112, 112, 0.16)
    background-color white

    .pagination
      padding-bottom 40px
      .pagination-items
        +to-width(420px)
          padding 0 15px

  &-photo
    img
      max-width 100%


  &-item
    border-bottom 1px solid #f6f6f6
    padding 0 30px
    overflow hidden
    max-height 88px
    transition 1s all
    +to-width(420px)
      padding 0 15px
    &.open
      max-height 2000px

    &-info
      display flex
      align-items center

    &-header
      height 88px
      display flex
      justify-content space-between
      align-items center

    &__date
      padding-right 40px
      margin-right 40px
      position relative
      font-size 17px
      font-weight 400
      &:after
        content ''
        position absolute
        right 0
        top -2px
        bottom -2px
        width 1px
        background-color #d8d8d8

      +to-width(640px)
        display none

    &__title
      font-size 19px
      font-weight 900

    &-button
      display flex
      align-items center
      justify-content center
      cursor pointer
      &.close
        .vacancy-item-button__icon
          background-color #eeb621
          img
            opacity 1
          svg
            opacity 0

      &:hover
        p
          color #eeb621
        .vacancy-item-button__icon
          background-color #eeb621
          svg
            path
              fill black
              t()

      p
        font-size 17px
        font-weight 900
        text-transform uppercase
        margin-right 10px
        t()
        +to-width(767px)
          display none

      &__icon
        width 48px
        height 48px
        background-color #000000
        display flex
        align-items center
        justify-content center
        position relative
        t()
        img
          &:last-child
            opacity 0
            position absolute
            t()

    &-body
      padding-top 30px
      padding-bottom 50px
      h3
        padding-bottom 4px
        color #000000
        font-size 27px
        font-weight 900
        +to-width(520px)
          font-size 24px
          padding-bottom 10px

      ul, p
        padding-bottom 30px
        font-size 17px
        font-weight 400
        line-height 24px
        +to-width(520px)
          font-size 14px
          line-height 20px

      .checkbox
        margin-top 60px

      .simple-button
        margin-top 20px
        cursor pointer
        margin 0
        margin-top 20px
        p
          font-size 15px
          font-weight 900
          letter-spacing 0.83px
          padding-bottom 0



  &-form
    margin-top 40px
    width 100%
    max-width 635px
    +to-width(520px)
      margin-top 20px

    &__title
      font-size 27px
      font-weight 900
      padding-bottom 5px

    &__input
      margin-top 20px
      width 100%
      label
        font-size 17px
        font-weight 900
        padding-bottom 10px
        display block
      input
        width 100%
        height 70px
        background-color #f1f1f1
        padding-left 28px
        border none
        font-size 17px
        font-weight 400
        display block
        +to-width(420px)
          padding-left 15px

    &__file
      margin-top 20px
      p
        font-size 17px
        font-weight 900
      &-wrap
        position relative
        display flex

        .file-info
          display flex
          align-items center
          margin-left 20px
          p
            font-size 16px
            font-weight 600
            padding-bottom 2px
          img
            opacity 0
            pointer-events none
            margin-left 10px
            cursor pointer
            &:hover
              opacity 0.7

          &.value
            img
              opacity 1
              pointer-events all

      input
        position absolute
        z-index -1
        left 0
        top 0
        height 50px
        width 154px

      label
        background-color #eeb621
        height 50px
        width 154px
        font-size 13px
        font-weight 900
        padding 16px 20px
        padding-right 50px
        line-height 1.4
        text-transform uppercase
        cursor pointer
        position relative
        t()
        &:after
          content ''
          position absolute
          width 16px
          height 17px
          background-image url('../images/vacancy/icon_clip.svg')
          right 17px
          top 16px

        &:hover
          opacity 0.7
