.objects
  padding 40px 0
  +to-width(640px)
    padding-top 20px

  &-body
    display flex
    flex-wrap wrap
    margin-left -15px
    margin-right -15px
    +to-width(900px)
      margin-left -4px
      margin-right -4px

  .slider-content
    +to-width(900px)
      padding 0 20px
  .slider-item
    width 50%
    +to-width(640px)
      width 100%
    &__container
      width 100%
      +to-width(420px)
        height 220px
