.life
  padding-top 45px
  padding-bottom 25px

  .pagination
    padding-bottom 20px

  &-text
    font-size 21px
    font-weight 600
    line-height 27px
    padding-bottom 30px

  &-article
    padding 15px 0
    display flex


    &__image
      min-width 370px
      width 370px
      height 260px
      margin-right 30px
      background-position top center
      background-size cover
      +to-width(1100px)
        min-width 340px
      +to-width(800px)
        min-width 280px
        height 220px
      +to-width(640px)
        display none

    &__content

      h3
        font-size 26px
        font-weight 900
        padding-bottom 10px

      p
        font-size 17px
        font-weight 400
        line-height 26px
        padding-bottom 20px

  &-button
    display flex
    align-items center
    width fit-content
    .pagination__arrow
      transform rotate(0deg)
    p
      font-size 16px
      font-weight 900
      letter-spacing 1.23px
      margin-left 13px
      color black
      padding-bottom 0
      text-transform uppercase
      t()

    &:hover
      p
        color #eeb621
      .pagination__arrow
        background-color #eeb621
        t()
        svg
          use
            fill black
            t()
