.works

  &-body
    display flex
    flex-wrap wrap
    margin-left -15px
    margin-right -15px
    padding-top 15px
    +to-width(750px)
      padding-top 10px
    +to-width(640px)
      margin-left -4px
      margin-right -4px
    +to-width(420px)
      margin-left -2px
      margin-right -2px

  &-item
    width 33.333%
    padding 15px
    +to-width(1100px)
      width 50%
    +to-width(640px)
      padding 4px
    +to-width(420px)
      padding 2px

    &__container
      &:hover
        .works-button
          &:after
            width 140%
          p
            color #eeb621

    &__image
      height 300px
      background-position center
      background-size cover
      +to-width(1100px)
        height 260px
      +to-width(640px)
        height 180px
      +to-width(460px)
        height 140px
      +to-width(360px)
        height 100px

  &-button
    height 78px
    width 100%
    background-color #ffc62d
    display flex
    align-items center
    justify-content space-between
    padding-right 36px
    overflow hidden
    position relative
    transition 0.7s all
    +to-width(750px)
      padding-right 20px
    +to-width(460px)
      height 60px
    +to-width(360px)
      height 50px
    &:after
      content ''
      position absolute
      right -50px
      top -100px
      bottom -100px
      right -100px
      width 200px
      background-color black
      transform rotate(15deg)
      transition 0.7s all
      +to-width(750px)
        width 160px
      +to-width(460px)
        display none

    &__left
      height 100%
      max-width 260px
      display flex
      align-items center

    &__icon
      width 75px
      min-width 75px
      height 100%
      background-color #eeb621
      display flex
      align-items center
      justify-content center
      position relative
      z-index 2
      +to-width(750px)
        display none

    &__arrow
      position relative
      z-index 2
      +to-width(460px)
        display none

    p
      margin-left 12px
      color #000000
      font-size 20px
      line-height 22px
      letter-spacing 0.5px
      font-weight 700
      text-transform uppercase
      position relative
      z-index 2
      transition 0.7s all
      +to-width(750px)
        font-size 16px
        line-height 20px
      +to-width(400px)
        font-size 14px
        line-height 18px
