.header
  position absolute
  z-index 10
  left 0
  right 0
  top 0

  .wrap
    display flex
    justify-content space-between
    align-items center
    height 100%

  &-logo
    margin-bottom 4px
    +to-width(1100px)
      img
        max-width 130px

  &-main
    background white
    background-color #f7f7f7
    height 74px
    +to-width(1100px)
      display none
      height 55px
    .wrap
      padding-top 12px
      padding-bottom 12px
    &__button
      color #000000
      font-size 13px
      font-weight 900
      text-transform uppercase
      width 154px
      height 50px
      display flex
      align-items center
      justify-content center
      background-color #eeb621
      cursor pointer
      t()
      +to-width(1100px)
        height 40px
      +to-width(700px)
        display none

    .nav
      height 74px
      position relative
      +to-width(1100px)
        height 55px
      &-list
        display flex
        height 100%
        &__item
          font-size 16px
          color #000000
          font-weight 900
          text-transform uppercase
          height 100%
          display flex
          align-items center
          position relative
          &:first-child
            &:after
              content ''
              position absolute
              top 35px
              right 7px
              width 1px
              height 5px
              border-top solid 4px black
              border-left solid 4px transparent
              border-right solid 4px transparent
              +to-width(1100px)
                top 25px
          &:last-child
            margin-right 0
          a
            color #000000
            height 100%
            display flex
            align-items center
            padding 0 20px
            t()
            &:hover
              background-color #eeb621
              ul
                transform translateY(0%)
          &:hover
            ul
              transform translateY(0%)
              opacity 1

          ul
            position absolute
            background-color white
            top 74px
            padding 20px 20px
            z-index -1
            transform translateY(-100%)
            opacity 0
            t()
            +to-width(520px)
              left -50px
            li
              line-height 32px
              font-size 18px
              width fit-content
              a
                padding 0
                width max-content
                &:hover
                  background-color transparent
                  color #eeb621

  &-top
    height 50px
    background-color #414140
    t()
    +to-width(1100px)
      display none
    &.white
      background-color white
    &__text
      color #ffffff
      font-size 15px
      font-weight 400
      margin-right 23px

  &-search
    border-left 1px solid #d9d9d9
    padding-left 30px
    &:hover
      svg
        use
          fill #eeb621
    svg
      margin-right 14px
      cursor pointer
      use
        t()

  &-phone
    display flex
    align-items center
    margin-right 28px
    &:hover
      svg
        use
          fill #eeb621
      p
        color #eeb621
    svg
      margin-right 14px
      use
        t()
    p
      font-size 19px
      color #ffffff
      font-weight 700
      letter-spacing 0.59px
      text-transform uppercase
      t()

  &-right
    display flex
    align-items center
    height 100%

  &-left
    display flex
    align-items center
    height 100%

  &_duble
    position fixed
    top 0
    right 0
    left 0
    opacity 0
    pointer-events none
    transform translateY(-100%)
    t()
    +to-width(1100px)
      opacity 1
      pointer-events all
      transform translateY(0%)
      display block
      .header-top
        z-index 2
    &.fixed
      opacity 1
      pointer-events all
      transform translateY(0%)

    .header-top__text, .header-phone p
      color black
      +to-width(1100px)
        display none

    .header-phone
      +to-width(700px)
        margin-right 10px
      &:hover
        p
          color #eeb621
        svg
          use
            fill #eeb621
      svg
        use
          fill black

    .header-search
      &:hover
        svg
          use
            fill #eeb621
      svg
        use
          fill black

    .header-logo
      margin-right 20px
      +to-width(520px)
        display none

    .header-search
      +to-width(700px)
        padding-left 20px
      svg
        margin-right 40px
        +to-width(700px)
          margin-right 0

    .nav-top
      position absolute
      left 0px
      top 0
      background-color white
      padding 0 35px
      padding-top 90px
      max-width 275px
      opacity 0
      pointer-events none
      transform translateY(-100%)
      t()
      &.open
        opacity 1
        z-index 2
        pointer-events all
        transform translateY(0%)
      .nav-top-list
        display block
        padding-bottom 25px

      .nav-top__item
        position relative
        a
          color black
          line-height 32px
          font-size 18px
          &:hover
            color #eeb621

      &__socials
        border-top 1px solid #d8d8d8
        padding 20px 0
        display flex
        align-items center
        a
          margin-right 25px

  &-gamburger
    position relative
    // top 12px
    // left 15px
    margin-bottom 5px
    margin-right 35px
    cursor pointer
    width 24px
    height 26px
    // display none
    min-width 24px
    z-index 3
    +to-width(520px)
      margin-right 10px

    &__item
      position absolute
      left 0
      top 8px
      height 2px
      background-color black
      right 0
      transition 0.3s all
      &:nth-child(2)
        top 16px
      &:last-child
        top 24px

    &.active
      .header-gamburger__item
        &:nth-child(1)
          transform rotate(-45deg)
          top 18px
        &:nth-child(2)
          transform rotate(45deg)
          top 18px
        &:last-child
          opacity 0

    &:hover
      cursor pointer

.nav
  height 100%
  &-top
    &-list
      display flex
      height 100%
    &__item
      height 100%
      font-size 13px
      font-weight 700
      text-transform uppercase
      margin-right 20px
      &:last-child
        margin-right 0
      &:hover
        a
          color #eeb621
      a
        color white
        t()

.search
  position fixed
  padding 0
  left 0px
  right 0px
  top 0
  background-color white
  z-index 20
  opacity 0
  pointer-events none
  overflow-y scroll
  .wrap
    display block
    height 100%
  &.open
    opacity 1
    pointer-events all
  &-input
    height 60px
    input
      width 100%
      height 100%
      border none
      border-bottom 1px solid #d4d4d4
      font-size 21px
      font-weight 600

  &-scroll
    overflow-y scroll
    max-height 100vh

    .search-close
      position absolute
      right 30px
      top 0px
      bottom 0
      width 20px
      display flex
      justify-content center
      align-items center
      cursor pointer
      z-index 2
      t()
      &:hover
        opacity 0.7

  &-result
    padding 15px 0


  &-nothing
    padding-top 5px
    padding-bottom 30px
    p
      font-size 28px
      line-height 30px
      +to-width(640px)
        font-size 22px
      &:first-child
        font-weight 900

  &-article
    display flex
    padding 15px 0
    &__image
      width 270px
      min-width 270px
      height 180px
      margin-right 20px
      +to-width(900px)
        min-width 220px
        height 150px
      +to-width(640px)
        display none

    &__title
      font-size 28px
      font-weight 900
      padding-bottom 8px
      +to-width(900px)
        font-size 24px

    &__text
      font-size 17px
      font-weight 600
      line-height 30px
      +to-width(900px)
        font-size 16px
