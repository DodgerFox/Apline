.gratitudes
  .section-header
    padding-bottom 13px
    border-bottom 3px solid #d8d8d8

  &-switch
    display flex
    +to-width(640px)
      margin-top 10px

    &__item
      font-size 15px
      font-weight 900
      color #000000
      text-transform uppercase
      margin-left 25px
      padding-bottom 9px
      border-bottom 3px solid transparent
      t()
      &.active
        border-bottom 3px solid #ffc62d

      &:hover
        color #ffc62d

      &:first-child
        margin-left 0

  &-body
    margin-top 20px

  &-play
    width 60px
    height 60px
    background-color #ffffff
    border-radius 50%
    display flex
    align-items center
    justify-content center
    t()

  &-article
    padding 30px 0
    border-bottom 1px solid #d8d8d8
    padding-left 300px
    min-height 260px
    position relative
    +to-width(640px)
      padding-left 0

    &:last-child
      border none

    &__image
      position absolute
      background-position top center
      background-size cover
      left 0
      top 30px
      width 270px
      height 200px
      display flex
      align-items center
      justify-content center
      cursor pointer
      &:hover
        .gratitudes-play
          opacity 0.7

      +to-width(640px)
        position initial
        margin-top 10px
        margin-bottom 10px

    &__title
      font-size 25px
      font-weight 900
      padding-bottom 10px

    &__text
      font-size 18px
      font-weight 400
      line-height 30px
      padding-bottom 10px

    &__wrap
      max-height 105px
      overflow hidden
      transition 0.8s all
      +to-width(1140px)
        max-height 120px
      &.open
        max-height 1500px

  &-docs
    margin-top 10px
    display flex
    flex-wrap wrap
    margin-left -15px
    margin-right -15px
    padding-bottom 30px
    +to-width(800px)
      margin-left -10px
      margin-right -10px

    &__item
      padding 0 15px
      margin-top 30px
      width 25%
      img
        max-width 100%
      +to-width(800px)
        width 33.333%
        padding 0 10px
      +to-width(520px)
        width 50%

    &__container
      box-shadow 0 14px 20px rgba(0, 0, 0, 0.1)
