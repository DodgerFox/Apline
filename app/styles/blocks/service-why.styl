.service-why
  padding-top 65px
  padding-bottom 40px
  background-position center
  background-size cover
  +to-width(420px)
    padding 40px 0
    padding-bottom 10px

  &__title
    font-size 50px
    color #ffffff
    font-weight 900
    text-transform uppercase
    text-align center
    padding-bottom 50px
    +to-width(767px)
      font-size 42px
      line-height 48px
    +to-width(560px)
      font-size 30px
      line-height 40px

  &__body
    display flex
    flex-wrap wrap
    margin-left -30px
    margin-right -30px
    +to-width(767px)
      margin-left -10px
      margin-right -10px
  &-item
    width 50%
    display flex
    padding 0 30px
    padding-bottom 40px
    color #ffffff
    +to-width(767px)
      width 100%
      padding 0 10px
      padding-bottom 40px
    &__image
      min-width 54px

    &__content
      padding-left 35px
      +to-width(767px)
        padding-left 20px

      h3
        font-size 26px
        font-weight 900
        text-transform uppercase
        padding-bottom 13px
        +to-width(560px)
          font-size 22px

      p
        font-size 19px
        font-weight 600
        line-height 23px
        +to-width(560px)
          font-size 18px
