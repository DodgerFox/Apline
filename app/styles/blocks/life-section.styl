.life-section
  overflow hidden
  .slider
    +to-width(420px)
      margin-left -15px
      margin-right -15px

    .slick-track
      display flex


    &-item
      background-color #f2f2f2
      padding 20px 15px
      height 100%
      padding-bottom 88px!important
      +to-width(900px)
        padding 20px 10px
      &:first-child
        padding-left 20px
      &__container
        width 270px
        height 100%
        background-color transparent
        display block
        overflow visible
        padding 0
        color black
        &:after
          display none

      &__image
        width 100%
        height 270px
        +to-width(420px)
          height 240px

    &-content
      transform translate(0)

    &-date
      font-size 12px
      font-weight 600
      text-transform uppercase
      padding 4px 10px
      background-color #e4e4e4
      display inline-block

    &-title
      margin-top 18px
      font-size 23px
      font-weight 900
      background-color transparent
      color black

    &-text
      font-size 17px
      font-weight 400
      line-height 23px

    &-next
      background-color #000000
    &-button
      margin-top 20px
      display flex
      align-items center
      position absolute
      left 0px
      right 0px
      bottom -68px
      p
        margin-left 12px
        font-size 16px
        font-weight 900
        letter-spacing 1.23px
        text-transform uppercase
