.season
  background-color #f1f1f1
  background-image url('../images/season-bg.png')
  background-size cover
  background-position center 40px
  background-repeat no-repeat

  &-body
    display flex
    flex-wrap wrap
    margin-left -15px
    margin-right -15px
    padding-top 30px
    +to-width(750px)
      padding-top 10px
    +to-width(640px)
      margin-left -4px
      margin-right -4px
  &-item
    width 50%
    padding 0 15px
    +to-width(640px)
      padding 0 4px
    +to-width(460px)
      width 100%
      padding 4px

    &__container
      &:hover
        .season-button__arrow
          &:after
            transform scale(10)

    &__image
      height 390px
      width 100%
      background-size cover
      background-position top center
      +to-width(950px)
        height 280px
      +to-width(640px)
        height 200px
      +to-width(460px)
        height 180px

  &-button
    width 100%
    height 88px
    background-color black
    display flex
    align-items center
    justify-content space-between
    padding-left 30px
    padding-right 20px
    overflow hidden
    +to-width(640px)
      padding-left 15px
    p
      color #ffffff
      font-size 21px
      font-weight 700
      text-transform uppercase
      +to-width(640px)
        font-size 16px

    &__arrow
      width 48px
      height 48px
      background-color #eeb621
      display flex
      justify-content center
      align-items center
      position relative
      img
        position relative
        z-index 2
      &:after
        content ''
        background-color #eeb621
        position absolute
        border-radius 50%
        height 100%
        width 100%
        transition 0.5s all
